<% include ../partials/header %>

<div class="ui main text container segment" style='margin-top:7em'>
    <div class="ui huge header">Edit <%= user.name %> </div>
    <form class="ui form" method="POST" action="/user/edit/<%= user.id %>?_method=PUT">
    <div class="field">
        <label>Name</label>
        <input type="text" placeholder="Name" name="name" value="<%= user.name %>">
    </div>
    <div class="field">
            <label>Age </label>
            <input type="text" placeholder="Age" name="age" value="<%= user.age %>">
    </div>
    <div class="field">
            <label>Address</label>
            <input type="text" placeholder="Address" name="address" value="<%= user.address %>">
        </div>
    <div class="ui inverted sement">
        <button class="ui inverted primary button">Submit</button>
    </div>
    </form>
</div>


<% include ../partials/footer %>